  },
  "devDependencies": {
    "@types/express-serve-static-core": "^5.0.7",
    "@types/node": "^24.1.0",
    "c8": "^10.1.3",
    "cors": "^2.8.5",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "mocha": "^11.7.1",
    "rimraf": "^6.0.1",
    "set-cookie-parser": "^2.7.1",
